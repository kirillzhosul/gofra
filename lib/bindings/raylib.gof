extern pub func void _DrawFPS[int x,int y]                         pub func void DrawFPS[int x,int y] x y call _DrawFPS end

pub func int rgba_to_raylib_argb[int,int,int,int]
    var color int = 0;

    &color swap 24 << color | !<
    &color swap 16 << color | !<
    &color swap 8  << color | !<
    &color swap       color | !<

    color return
end


