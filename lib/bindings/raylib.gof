#include "std/types.gof"

#ifdef RAYLIB_STRUCT_COLORS
    struct Color
        r char        // Color red value
        g char        // Color green value
        b char        // Color blue value
        a char        // Color alpha value
    end

    const WHITE Color = {r = 255, g = 255, b = 255, a = 255}
    const BLACK Color = {r = 0, g = 0, b = 0, a = 255}
#endif 

#ifndef RAYLIB_STRUCT_COLORS
    type Color int


    const var WHITE = 0xFFFFFFFF
    const var BLACK = 0xFF000000
#endif 


extern pub func void _ClearBackground[Color color]                 pub func void ClearBackground[Color color] color _ClearBackground  end
extern pub func void _DrawText[CStr,int,int,int,Color]             pub func void DrawText[CStr,int,int,int,Color] _DrawText end
extern pub func void _DrawLine[int,int,int,int,Color]              pub func void DrawLine[int,int,int,int,Color] _DrawLine end
